@model TaskListSystemMVC.Database.Model.MStatus

@{
    ViewData["Title"] = "Edit Status";

    var message = ViewData["AlertMessage"]?.ToString();
}

<h2>Edit Status</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-danger" role="alert">
        @message
    </div>
}

<form asp-action="Edit" asp-controller="MStatus" method="post">
    <input type="hidden" asp-for="UID" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="UpdatedOn" />
    <div class="mb-3">
        <label for="txtName" class="form-label">Name</label>
        <input asp-for="Name" id="txtName" class="form-control" required="true" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="txtDescription" class="form-label">Description</label>
        <textarea asp-for="Description" id="txtDescription" class="form-control"></textarea>
    </div>
    <div class="d-flex gap-2 pt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "MStatus")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
