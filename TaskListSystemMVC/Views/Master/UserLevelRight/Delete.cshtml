@model TaskListSystemMVC.Database.Model.MUserLevelRight

@{
    ViewData["Title"] = "Delete User Level Right";
}

<h2>Delete User Level Right</h2>

<form asp-action="DeleteConfirmed" asp-controller="MUserLevelRight" method="post">
    <input type="hidden" asp-for="UID" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="UpdatedOn" />
    <div class="md-3">
        <label for="txtName" class="form-label">Name</label>
        <input asp-for="Name" id="txtName" type="text" class="form-control readonly-disabled" readonly="true" />
    </div>
    <div class="md-3">
        <label for="txtDescription" class="form-label">Description</label>
        <textarea asp-for="Description" id="txtDescription" class="form-control readonly-disabled" readonly="true"></textarea>
    </div>
    <div class="d-flex pt-2 gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "MUserLevelRight")" class="btn btn-secondary">Cancel</a>
    </div>
</form>