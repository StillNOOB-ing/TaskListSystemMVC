@model TaskListSystemMVC.Database.Model.MUserHobby;

@{
    ViewData["Title"] = "Delete User Hobby";
}

<h2>Delete User Hobby</h2>

<form asp-action="Delete" asp-controller="MUserHobby" method="post">
    <input type="hidden" asp-for="UID" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="UpdatedOn" />
    <div class="mb-3">
        <label for="txtName" class="form-label">Name</label>
        <input id="txtName" asp-for="Name" class="form-control readonly-disabled" UserHobby="text" readonly="true" />
    </div>
    <div class="mb-3">
        <label for="txtDescription" class="form-label">Description</label>
        <textarea id="txtDescription" asp-for="Description" class="form-control readonly-disabled" readonly="true"></textarea>
    </div>
    <div class="d-flex gap-2 pt-2">
        <button UserHobby="submit" class="btn btn-primary">Delete</button>
        <a href="@Url.Action("Index", "MUserHobby")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
