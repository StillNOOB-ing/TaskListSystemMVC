@model TaskListSystemMVC.Database.Model.MType;

@{
    ViewData["Title"] = "Create Type";

    var message = ViewData["AlertMessage"]?.ToString();
}

<h2>Create Type</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-danger" role="alert">
        @message
    </div>
}

<form asp-action="Create" asp-controller="MType" method="post">
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="CreatedOn" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="UpdatedOn" />
    <div class="mb-3">
        <label for="txtName" class="form-label">Name</label>
        <input id="txtName" asp-for="Name" class="form-control" type="text" required="true" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="txtDescription" class="form-label">Description</label>
        <textarea id="txtDescription" asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="d-flex gap-2 pt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "MType")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
